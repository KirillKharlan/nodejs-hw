generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id              Int @unique @default(autoincrement()) @id
  name            String
  postDescription String
  img             String
  likes           Int
  tags            PosTag[]
  categoryId      Int?
  category        Category? @relation(fields: [categoryId], references: [id])
}

model Tag {
  name  String @unique
  posts PosTag[]
}

model PosTag {
  post       Post @relation(fields: [postId], references: [id])
  postId     Int
  tag        Tag @relation(fields: [tagName], references: [name])
  tagName    String

  @@id([postId, tagName])
}

model Category {
  id          Int @unique @default(autoincrement()) @id
  name        String @unique
  description String?
  posts       Post[]
}

model User {
  id Int @unique @default(autoincrement()) @id 
  email String @unique 
  password String
  name String?
}