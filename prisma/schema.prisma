generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Post {
  id              Int @unique @default(autoincrement()) @id
  name            String
  postDescription String
  img             String
  likes           Int @default(0)
  
  createdAt       DateTime  @default(now())

  createdById     Int      
  createdBy       User     @relation(fields: [createdById], references: [id])
  
  comments        Comment[]
  likedBy         PostLike[]

  tags            PosTag[]
  categoryId      Int?
  category        Category? @relation(fields: [categoryId], references: [id])


}

model User {
  id           Int @unique @default(autoincrement()) @id
  firstName    String    
  secondName   String
  email        String @unique
  avatar       String @unique
  password     String @unique
  isAdmin      Boolean @default(false)


  createdPosts Post[] 

  likedPosts   PostLike[]

  comments     Comment[]

}

model PostLike {
  userId Int
  postId Int


  user User @relation(fields: [userId], references: [id])

  post Post @relation(fields: [postId], references: [id])

  @@id([userId, postId])
}

model Tag {
  name  String @unique
  posts PosTag[]
}

model PosTag {
  post       Post @relation(fields: [postId], references: [id])
  postId     Int

  tag        Tag @relation(fields: [tagName], references: [name])
  tagName    String

  @@id([postId, tagName])
}

model Category {
  id          Int @unique @default(autoincrement()) @id
  name        String @unique
  description String?
  
  posts       Post[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  body      String
  createdAt DateTime @default(now())
  
  postId    Int
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  authorId  Int
  author    User     @relation(fields: [authorId], references: [id])
}